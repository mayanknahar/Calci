<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_weight="1"
        android:background="@color/textField"
        android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingTop="40pt"
            android:text="0"
            android:gravity="right"
            android:background="@color/textField"
            android:textSize="60sp"
            android:ems="10"
            android:id="@+id/t1"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:background="@color/buttonColor"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:textSize="25sp"
                    android:id="@+id/bAC"
                    android:onClick="allClear"
                    android:layout_weight="1"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bSign"
                    android:textSize="25sp"
                    android:onClick="numEvent"
                    android:background="@color/buttonColor"
                    android:layout_weight="1"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bPercent"
                    android:textSize="25sp"
                    android:onClick="Percent"
                    android:background="@color/buttonColor"
                    android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bDiv"
                    android:textSize="25sp"
                    android:onClick="opEvent"
                    android:background="@color/buttonColor"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:background="@color/numericButton"
                    android:id="@+id/b9"
                    android:textSize="25sp"
                    android:onClick="numEvent"
                    android:layout_weight="1"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b8"
                    android:textSize="25sp"
                    android:onClick="numEvent"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b7"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="x"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bMul"
                    android:textSize="25sp"
                    android:onClick="opEvent"
                    android:background="@color/buttonColor"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b6"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b5"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b4"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bAdd"
                    android:onClick="opEvent"
                    android:textSize="25sp"
                    android:background="@color/buttonColor"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b3"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b2"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/b1"
                    android:onClick="numEvent"
                    android:textSize="25sp"
                    android:background="@color/numericButton"
                    android:layout_weight="1"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bSub"
                    android:onClick="opEvent"
                    android:textSize="25sp"
                    android:background="@color/buttonColor"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="70pt"
                android:layout_height="30pt"
                android:id="@+id/b0"
                android:onClick="numEvent"
                android:textSize="25sp"
                android:background="@color/numericButton"
                android:layout_weight="1"/>
        <Button
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:id="@+id/bPoint"
                android:onClick="numEvent"
                android:textSize="25sp"
                android:background=" #d68910 "
                android:layout_weight="1"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:id="@+id/bEqual"
                android:textSize="25sp"
                android:onClick="eqEvent"
                android:background="@color/buttonColor"
                android:layout_weight="1"/>
    </LinearLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="More coming soon"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor=" #229954 "
            android:ems="10"
            android:id="@+id/t2"/>
</LinearLayout>